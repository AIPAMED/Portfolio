{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* ✅ Adjustments for Vercel build */
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,          // ✅ allows implicit any (stops harmless Vercel build errors)
    "isolatedModules": true,         // ✅ required for Vite/Vercel compatibility
    "esModuleInterop": true,         // ✅ ensures React + Vite imports behave properly
    "allowJs": true,                 // ✅ allows .js files if any exist

    /* Linting (optional but safe) */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
